

def calculate_big_birthday(name: str, age: int):
    next_10 = range(10, 90, 10)
    age10 = 0
    for f in next_10:
        while f - age < 10 and f - age > 0:
            age10 = f - age
            return f"{name} it is {age10} until your next big birthday"

def main(name: str, age: int):
    print(calculate_big_birthday(name, age))


