def name_surname(name: str, surname: str):
    return f"{surname}, {name}"


def print_countries_language(country, language):
    return f'"In {country} people speak {language}"'


def length_comparison(word1: str, word2: str):
    if word1 == word2:
        print("The two words are the same length")
    else:
        print("The two words are not the same length")

# length_comparison("hi", "hello")


def use_numbers_draw_box(number1: int, number2: int):
    print(f"{number1}" * 10)
    print(f"{number2}        {number2}")
    print(f"{number2}        {number2}")
    print(f"{number2}        {number2}")
    print(f"{number2}        {number2}")
    print(f"{number1}" * 10)


